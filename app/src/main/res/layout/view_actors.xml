<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/movie_background">

    <ImageView
        android:id="@+id/im_robert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/robert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_chris_evans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/actors_margin"
        android:src="@drawable/chrisevans"
        app:layout_constraintStart_toEndOf="@+id/im_robert"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/actors_margin"
        android:src="@drawable/mark"
        app:layout_constraintStart_toEndOf="@+id/im_chris_evans"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_chris_hemsworth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/actors_margin"
        android:src="@drawable/chrishemsworth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/im_mark"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_robert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/actors_margin"
        android:fontFamily="@font/roboto_medium"
        android:text="Robert Downey Jr."
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/im_robert"
        app:layout_constraintStart_toStartOf="@+id/im_robert"
        app:layout_constraintTop_toBottomOf="@+id/im_robert" />

    <TextView
        android:id="@+id/tx_chris_evans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/actors_margin"
        android:fontFamily="@font/roboto_medium"
        android:text="Chris
                Evans"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/im_chris_evans"
        app:layout_constraintStart_toStartOf="@+id/im_chris_evans"
        app:layout_constraintTop_toBottomOf="@+id/im_chris_evans" />

    <TextView
        android:id="@+id/tx_mark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/actors_margin"
        android:fontFamily="@font/roboto_medium"
        android:text="Mark
                Ruffalo"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/im_mark"
        app:layout_constraintStart_toStartOf="@+id/im_mark"
        app:layout_constraintTop_toBottomOf="@+id/im_mark" />

    <TextView
        android:id="@+id/tx_chris_hemsworth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/actors_margin"
        android:fontFamily="@font/roboto_medium"
        android:text="Chris Hemsworth"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/im_chris_hemsworth"
        app:layout_constraintStart_toStartOf="@+id/im_chris_hemsworth"
        app:layout_constraintTop_toBottomOf="@+id/im_chris_hemsworth" />
</androidx.constraintlayout.widget.ConstraintLayout>