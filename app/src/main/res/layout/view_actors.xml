<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/movie_background">

    <ImageView
        android:id="@+id/first_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/robert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/second_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/views_margin_8"
        android:src="@drawable/chrisevans"
        app:layout_constraintStart_toEndOf="@+id/first_actor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/third_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/views_margin_8"
        android:src="@drawable/mark"
        app:layout_constraintStart_toEndOf="@+id/second_actor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/forth_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/views_margin_8"
        android:src="@drawable/chrishemsworth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/third_actor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_margin_8"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/robert_downey_jr"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/first_actor"
        app:layout_constraintStart_toStartOf="@+id/first_actor"
        app:layout_constraintTop_toBottomOf="@+id/first_actor" />

    <TextView
        android:id="@+id/second_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_margin_8"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/chris_evans"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/second_actor"
        app:layout_constraintStart_toStartOf="@+id/second_actor"
        app:layout_constraintTop_toBottomOf="@+id/second_actor" />

    <TextView
        android:id="@+id/third_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_margin_8"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/mark_ruffalo"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/third_actor"
        app:layout_constraintStart_toStartOf="@+id/third_actor"
        app:layout_constraintTop_toBottomOf="@+id/third_actor" />

    <TextView
        android:id="@+id/forth_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_margin_8"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/chris_hemsworth"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/forth_actor"
        app:layout_constraintStart_toStartOf="@+id/forth_actor"
        app:layout_constraintTop_toBottomOf="@+id/forth_actor" />
</androidx.constraintlayout.widget.ConstraintLayout>