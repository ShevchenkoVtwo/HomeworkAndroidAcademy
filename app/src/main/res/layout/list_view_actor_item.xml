<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/views_margin_4"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/robert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/actor_photo" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_margin_8"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/actor_name"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toEndOf="@+id/actor"
        app:layout_constraintStart_toStartOf="@+id/actor"
        app:layout_constraintTop_toBottomOf="@+id/actor" />

</androidx.constraintlayout.widget.ConstraintLayout>